<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LoginFrame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:textSize="40dp" />

        <TextView
            android:id="@+id/text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="0"
            android:textSize="80dp"
            android:textColor="@color/black"/>

    </LinearLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:columnCount="4"
        android:rowCount="5">

        <Button
            android:id="@+id/bt_ce"
            android:text="CE"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="4dp"
            android:background="@color/black"
            android:textColor="@color/white"
            android:textSize="30dp"/>
        <Button
            android:id="@+id/bt_c"
            android:text="C"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="4dp"
            android:background="@color/black"
            android:textColor="@color/white"
            android:textSize="30dp"/>

        <ImageButton
            android:id="@+id/bt_delete"
            android:src="@drawable/delete"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="4dp"
            android:background="@color/black"
            android:contentDescription="null"/>

        <Button
            android:id="@+id/bt_chia"
            android:text="/"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="4dp"
            android:background="@color/black"
            android:textColor="@color/white"
            android:textSize="30dp"/>

        <Button
            android:id="@+id/bt_7"
            android:text="7"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="4dp"
            android:background="@color/black"
            android:textColor="@color/white"
            android:textSize="30dp"/>
        <Button
            android:id="@+id/bt_8"
            android:text="8"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="4dp"
            android:background="@color/black"
            android:textColor="@color/white"
            android:textSize="30dp"/>
        <Button
            android:id="@+id/bt_9"
            android:text="9"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="4dp"
            android:background="@color/black"
            android:textColor="@color/white"
            android:textSize="30dp"/>
        <Button
            android:id="@+id/bt_nhan"
            android:text="x"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="4dp"
            android:background="@color/black"
            android:textColor="@color/white"
            android:textSize="30dp"/>

        <Button
            android:id="@+id/bt_4"
            android:text="4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="4dp"
            android:background="@color/black"
            android:textColor="@color/white"
            android:textSize="30dp"/>
        <Button
            android:id="@+id/bt_5"
            android:text="5"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="4dp"
            android:background="@color/black"
            android:textColor="@color/white"
            android:textSize="30dp"/>
        <Button
            android:id="@+id/bt_6"
            android:text="6"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="4dp"
            android:background="@color/black"
            android:textColor="@color/white"
            android:textSize="30dp"/>
        <Button
            android:id="@+id/bt_tru"
            android:text="-"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="4dp"
            android:background="@color/black"
            android:textColor="@color/white"
            android:textSize="50dp"/>

        <Button
            android:id="@+id/bt_1"
            android:text="1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="4dp"
            android:background="@color/black"
            android:textColor="@color/white"
            android:textSize="30dp"/>
        <Button
            android:id="@+id/bt_2"
            android:text="2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="4dp"
            android:background="@color/black"
            android:textColor="@color/white"
            android:textSize="30dp"/>
        <Button
            android:id="@+id/bt_3"
            android:text="3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="4dp"
            android:background="@color/black"
            android:textColor="@color/white"
            android:textSize="30dp"/>
        <Button
            android:id="@+id/bt_cong"
            android:text="+"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="4dp"
            android:background="@color/black"
            android:textColor="@color/white"
            android:textSize="30dp"/>

        <Button
            android:id="@+id/bt_am"
            android:text="+/-"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="4dp"
            android:background="@color/black"
            android:textColor="@color/white"
            android:textSize="30dp"/>
        <Button
            android:id="@+id/bt_0"
            android:text="0"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="4dp"
            android:background="@color/black"
            android:textColor="@color/white"
            android:textSize="30dp"/>

        <Button
            android:id="@+id/bt_bang"
            android:text="="
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="4dp"
            android:background="@color/teal_700"
            android:textColor="@color/white"
            android:textSize="30dp"/>
        <View  android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="4dp"
            />

    </GridLayout>

</LinearLayout>